<launch>
  <!-- Params -->
  <arg name="base_frame" default="base_link" />
  <arg name="sensor_frame" default="livox_frame" />
  <arg name="bd_code_param_path" />
  <arg name="launch_driver" default="true" />
  <arg name="vehicle_param_file" />
  <arg name="vehicle_mirror_param_file" />

  <include file="$(find-pkg-share sensing_launch)/launch/livox_horizon_pointcloud_preprocessor.launch.py">
    <arg name="base_frame" value="$(var base_frame)" />
    <arg name="sensor_frame" value="$(var sensor_frame)" />
    <arg name="vehicle_param_file" value="$(var vehicle_param_file)" />
    <arg name="vehicle_mirror_param_file" value="$(var vehicle_mirror_param_file)" />
    <arg name="bd_code_param_path" value="$(var bd_code_param_path)" />
    <arg name="user_config_path" value="$(find-pkg-share livox_ros2_driver)/config/livox_lidar_config.json"/>
    <arg name="launch_driver" value="$(var launch_driver)" />
  </include>

</launch>
